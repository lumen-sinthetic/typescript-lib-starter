{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"declaration": true,
		"jsx": "react-jsx",
		"outDir": "dist",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", "dist"]
}
